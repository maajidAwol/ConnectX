# Example .env file for connectx_backend Django project
# Copy this file to .env and fill in the actual values
# Do NOT commit .env to version control; add it to .gitignore

# Django Secret Key (generate a secure key for production)
SECRET_KEY=your-secret-key-here

# Debug mode (True for development, False for production)
DJANGO_DEBUG=True

# Allowed Hosts (comma-separated list of domains/IPs)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=require

# JWT Token Lifetimes
JWT_ACCESS_TOKEN_LIFETIME_HOURS=24
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS Allowed Origins (comma-separated list of frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL
FRONTEND_URL=https://connect-x-peach.vercel.app/

# Site Name
SITE_NAME=Connectx

# Email Configuration
DEFAULT_FROM_EMAIL=your-email@example.com
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
